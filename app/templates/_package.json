{
  "name": "<%= moduleName %>",
  "version": "<%= moduleVersion %>",
  "description": "<%= moduleDesc %>",
  "main": "dist/index.js",
  <% if (publishConfig) { %>"publishConfig": {
    "registry": "<%= publishConfig %>"
  },<% } %>
  "scripts": {
    "clean": "trash dist",
    "build": "babel src --out-dir dist",
    "eslint": "eslint --ext=.js -c .eslintrc src",
    "jscs": "jscs -c .jscsrc src",
    "lint": "npm run jscs && npm run eslint",
    "prelint:jenkins": "trash reports/lintresult.xml && mkdirp reports",
    "lint:jenkins": "npm run jscs && eslint -c .eslintrc src -f checkstyle -o reports/lintresult.xml",
    "pretest": "trash reports && mkdirp reports",
    "test": "BABEL_DISABLE_CACHE=1 mocha",
    "posttest": "npm run reports",
    "prereports": "echo '<?xml version=\"1.0\"?>' > reports/test-results.xml",
    "reports": "npm run reports:tests && npm run reports:coverage",
    "reports:tests": "BABEL_DISABLE_CACHE=1 mocha --reporter xunit | grep \"<\" >> reports/test-results.xml",
    "reports:coverage": "BABEL_DISABLE_CACHE=1 istanbul cover node_modules/mocha/bin/_mocha",
    "tdd": "npm test -- --watch",
    "validate": "npm run lint && npm test",
    "prepush": "npm run validate",
    "prepublish": "npm run build",
    "postpublish": "trash dist && git push --follow-tags"
  },
  "repository": {
    "type": "git",
    "url": "<%= repositoryUrl %>"
  },
  "keywords": [
    <% moduleKeywords.forEach(function(keyword, i, arr) { %>"<%= keyword %>"<% if (i !== arr.length - 1) { %>,
    <% } %><% }); %>
  ],
  "author": "<%= name %> <<%= email %>>",
  "devDependencies": {
    "babel": "^5.5.8",
    "babel-core": "^5.6.18",
    "babel-eslint": "^3.1.23",
    "babel-jscs": "^2.0.3",
    "chai": "^3.0.0",
    "chai-as-promised": "^5.1.0",
    "eslint": "^0.24.0",
    "eslint-config-airbnb": "0.0.6",
    "husky": "^0.8.1",
    "isparta": "^3.0.3",
    "istanbul": "^0.3.17",
    "jscs": "^2.0.0",
    "jscs-jsdoc": "^1.1.0",
    "mkdirp": "^0.5.1",
    "mocha": "^2.2.5",
    "sinon": "^1.15.4",
    "sinon-chai": "^2.8.0",
    "trash": "^1.4.1"
  }
}
